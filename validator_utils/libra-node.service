[Unit]
Description=Libra Node Service

[Service]
LimitNOFILE=65536
WorkingDirectory=/root/node_data/
ExecStart=/usr/local/bin/libra-node --config /root/node_data/node.configs.toml

Restart=always
RestartSec=10s

# Make sure you CREATE the directory and file for your output.log
StandardOutput=file:/root/logs/output.log
StandardError=file:/root/logs/output.log

[Install]
WantedBy=multi-user.target
Alias=libra-node.service